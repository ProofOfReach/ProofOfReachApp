[[workflows.workflow]]
name = "Nostr Ad Marketplace Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npx prisma generate && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Run Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest"

[[workflows.workflow]]
name = "Test Watch Mode"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest --watch"

[[workflows.workflow]]
name = "Prisma Generate"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma generate"

[[workflows.workflow]]
name = "Prisma DB Push"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma db push"

[[workflows.workflow]]
name = "Prisma Studio"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma studio"

[[workflows.workflow]]
name = "Clean Server Start"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf node_modules/.cache && npx prisma generate && NODE_OPTIONS='--no-warnings' next dev -p 5000 -H 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Test API Key Auth"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest src/lib/__tests__/apiKeyAuth.test.ts"

[[workflows.workflow]]
name = "Test API Keys Index"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest src/pages/api/auth/api-keys/__tests__/index.test.ts"

[[workflows.workflow]]
name = "Test API Keys ID"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest src/pages/api/auth/api-keys/__tests__/id.test.ts"

[[workflows.workflow]]
name = "Start Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_OPTIONS='--no-warnings' npx next dev -p 5000 -H 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Test TestModeBanner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest src/__tests__/components/TestModeBanner.test.tsx"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Test Error Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest src/__tests__/lib/errorService.test.ts"

[[workflows.workflow]]
name = "Test useErrorState Hook"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest src/__tests__/hooks/useErrorState.test.tsx"

[[workflows.workflow]]
name = "Test Campaign Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest src/__tests__/services/campaignService.test.ts --no-cache"

[[workflows.workflow]]
name = "Run Dashboard Tests"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx jest src/__tests__/pages/dashboard"

[deployment]
run = ["sh", "-c", "npm install && npx prisma generate && npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5555
externalPort = 3000

[[ports]]
localPort = 5556
externalPort = 3001
